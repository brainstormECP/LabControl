{% extends 'layout.html.twig' %}

{% block aditionalStyle %}
    <link href="{{ asset('bower_components/datepicker/css/datepicker.css')}}" rel="stylesheet" type="text/css">
{% endblock %}

{% block content -%}
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading"> <h3>Crear Experimento</h3></div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-9">
                        {{ form_start(form, {'attr':{ 'class':'form-horizontal' }}) }}
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(form.fechaInicio) }}
                                {{ form_widget(form.fechaInicio,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.fechaInicio) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(form.fechaFin) }}
                                {{ form_widget(form.fechaFin,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.fechaFin) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(form.observaciones) }}
                                {{ form_widget(form.observaciones,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.observaciones) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(form.actividadCientifica,'Actividad Cient√≠fica') }}
                                {{ form_widget(form.actividadCientifica,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.actividadCientifica) }}
                            </div>
                        </div>
                        <input type="submit" class="btn btn-success" value="Crear">
                        <a href="{{ path('experimento') }}" class="btn btn-default">Lista de experimentos</a>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block adicionalscripts %}
    <script src="{{ asset('bower_components/datepicker/js/bootstrap-datepicker.js')}}"></script>

    <script>
        $(document).ready(function(){
            $('#appbundle_experimento_fechaInicio').datepicker();
            $('#appbundle_experimento_fechaFin').datepicker();
        });
    </script>
{% endblock %}
