{% extends 'layout.html.twig' %}

{% block content -%}
    <div class="col-lg-12">
        <h1>Lista de Análisis</h1>
    <div class="panel panel-default">
        <div class="panel-heading"></div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-12">

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Reactivo</th>
                        <th>Cantidad</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for reactivo in analisis.analisisReactivos %}
                        <tr>
                            <td>{{ reactivo.reactivo }}</td>
                            <td>{{ reactivo.cantidad }}</td>
                            <td>
                                <a class="btn btn-info" href="{{ path('analisis_reactivo_editar', { 'id': reactivo.Id }) }}">Editar</a>|
                                <a class="btn btn-danger" href="{{ path('analisis_reactivo_delete', { 'id': reactivo.Id }) }}">Eliminar</a>
                            </td>
                        </tr>
                    {% endfor %}
                    {{ form_start(form, {'attr':{ 'class':'form form-inline' }}) }}
                    <div class="form-group">
                        <div class="col-md-3">
                            <input type="hidden" value="{{ analisis.id }}" name="id" id="id" content="{{ analisis.id }}">
                            {{ form_widget(form.reactivo,{'attr':{ 'class':'form-control','placeholder':'Reactivo' }}) }}
                            {{ form_errors(form.reactivo) }}
                        </div>
                        <div class="col-md-2">
                            {{ form_widget(form.cantidad,{'attr':{ 'class':'form-control' ,'placeholder':'Cantidad'}}) }}
                            {{ form_errors(form.cantidad) }}
                        </div>
                        <div class="col-md-5">
                            <input type="submit" class="btn btn-success" value="Guardar">
                            <a href="{{ path('analisis') }}" class="btn btn-default">Lista de análisis</a>
                        </div>
                    </div>
                    {{ form_end(form) }}
                    </tbody>
                </table>
            </div>
            </div>
        </div>
    </div>
        </div>



    {% endblock %}
