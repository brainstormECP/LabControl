{% extends 'moderna.layout.html.twig' %}

{% block featured %}
    <section id="featured">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">An√°lisis disponibles</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                {% for entity in entities %}
                    <div class="col-lg-3 col-md-6">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <i class="fa fa-tasks fa-5x"></i>
                                    </div>
                                    <div class="col-xs-9 text-right">
                                        <div class="huge">{{ entity.Id }}</div>
                                        <div>{{ entity.Nombre }}</div>
                                    </div>
                                </div>
                            </div>
                            <a href="{{ asset('uploads/descripcionAnalisis/') }}{{ entity.imageName }}">
                                <div class="panel-footer">
                                    <span class="pull-left">Detalles</span>
                                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>

                                    <div class="clearfix"></div>
                                </div>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <!-- /.row -->
        </div>
    </section>
{% endblock %}
