{% extends 'layout.html.twig' %}

{% block aditionalStyle %}
    <link href="{{ asset('bower_components/datepicker/css/datepicker.css')}}" rel="stylesheet" type="text/css">
{% endblock %}

{% block content -%}
    <div class="col-lg-12">
        <h1>Nuevo Salida de Reactivo</h1>
        <div class="panel panel-default">
            <div class="panel-heading"> </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        {{ form_start(form, {'attr':{ 'class':'form-horizontal' }}) }}
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(form.fecha) }}
                                {{ form_widget(form.fecha,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.fecha) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(form.reactivo) }}
                                {{ form_widget(form.reactivo,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.reactivo) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(form.cantidad) }}
                                {{ form_widget(form.cantidad,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.cantidad) }}
                            </div>
                        </div>

                        <input type="submit" class="btn btn-success" value="Guardar">
                        <a href="{{ path('salidareactivo') }}" class="btn btn-default">Lista de salidas de reactivos</a>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block adicionalscripts %}
    <script src="{{ asset('bower_components/datepicker/js/bootstrap-datepicker.js')}}"></script>

    <script>
        $(document).ready(function(){
            $('#appbundle_salidareactivo_fecha').datepicker();
        });
    </script>
{% endblock %}