{% extends 'layout.html.twig' %}

{% block content -%}
    <div class="col-lg-12">
        <h1>Lista de Reactivos</h1>
        {% for Message in app.session.flashbag.get('info') %}
            <p class="alert alert-success">
                <i class="fa fa-smile-o"></i>
                {{ Message | raw }}
            </p>
        {% endfor %}
        <div class="panel panel-default">
            <div class="panel-heading"><a href="{{ path('reactivo_new') }}" class="btn btn-success">Nuevo
                    Reactivo</a></div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">

                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Acciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td>{{ entity.Nombre }}</td>
                                    <td>
                                        <a class="btn btn-info"
                                           href="{{ path('reactivo_edit', { 'id': entity.Id }) }}">Editar</a>|
                                        <a class="btn btn-danger"
                                           href="{{ path('reactivo_show', { 'id': entity.Id }) }}">Eliminar</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
