{% extends 'layout.html.twig' %}

{% block body -%}
    <h1>Investigador list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Email</th>
                <th>Isactive</th>
                <th>Name</th>
                <th>Activationtoken</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('investigador_show', { 'id': entity.Id }) }}">{{ entity.Id }}</a></td>
                <td>{{ entity.UserName }}</td>
                <td>{{ entity.Password }}</td>
                <td>{{ entity.Email }}</td>
                <td>{{ entity.IsActive }}</td>
                <td>{{ entity.Name }}</td>
                <td>{{ entity.ActivationToken }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('investigador_show', { 'id': entity.Id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('investigador_edit', { 'id': entity.Id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('investigador_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
