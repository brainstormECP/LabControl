{% extends 'layout.html.twig' %}

{% block content -%}
    <div class="col-lg-12">
        <h1>Nuevo Investigador</h1>
        <div class="panel panel-default">
            <div class="panel-heading"> </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        {{ form_start(form, {'attr':{ 'class':'form-horizontal' }}) }}
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(form.name,'Nombre y Apellidos') }}
                                {{ form_widget(form.name,{'attr':{ 'class':'form-control','placeholder':'Nombre' }}) }}
                                {{ form_errors(form.name) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(form.username,'Nombre de usuario') }}
                                {{ form_widget(form.username,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.username) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(form.password,'Contraseña') }}
                                {{ form_widget(form.password,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.password) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(form.email,'Correo electrónico') }}
                                {{ form_widget(form.email,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.email) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(form.institucion,'Institución') }}
                                {{ form_widget(form.institucion,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.institucion) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(form.isActive,'Activo') }}
                                {{ form_widget(form.isActive,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.isActive) }}
                            </div>
                        </div>
                        <input type="submit" class="btn btn-success" value="Guardar">
                        <a href="{{ path('investigador') }}" class="btn btn-default">Lista de investigadores</a>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

