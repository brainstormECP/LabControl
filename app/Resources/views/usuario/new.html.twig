{% extends 'layout.html.twig' %}

{% block body -%}
    <h1>Usuario creation</h1>

    {{ form_start(form, {'attr' : {'class' : 'form-horizontal' } }) }}
    <div class="form-group">
        <div class="col-md-1">
            {{ form_label(form.nombre, null ,{ 'attr' : {'class' : 'control-label col-md-3' } }) }}
        </div>
        <div class="col-md-7">
            {{ form_widget(form.nombre, { 'attr' : {'class' : 'form-control' } }) }}
            {{ form_errors(form.nombre) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-1">
            {{ form_label(form.pass) }}
        </div>
        <div class="col-md-7">
            {{ form_widget(form.pass, { 'attr' : {'class' : 'form-control' } }) }}
            {{ form_errors(form.pass) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-7">
            <input type="submit" value="Crear" class="btn btn-success">
            <a href="{{ path('admin_user') }}" class="btn btn-default">Atr√°s</a>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}
