{% extends 'layout.html.twig' %}

{% block content -%}
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading"> <h3>Editar Tipo de Muestra</h3></div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-9">
                        {{ form_start(edit_form, {'attr':{ 'class':'form-horizontal' }}) }}
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(edit_form.nombre) }}
                                {{ form_widget(edit_form.nombre,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(edit_form.nombre) }}
                            </div>
                        </div>
                        <input type="submit" class="btn btn-success" value="Guardar">
                        <a href="{{ path('otrotipomuestra') }}" class="btn btn-default">Lista de Tipos de Muestras</a>
                        {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
