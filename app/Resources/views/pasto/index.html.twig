{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Pasto list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Tipoestudio</th>
                <th>Id</th>
                <th>Noorden</th>
                <th>Claveinterna</th>
                <th>Claveexterna</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pasto_show', { 'id': entity.id }) }}">{{ entity.tipoEstudio }}</a></td>
                <td>{{ entity.id }}</td>
                <td>{{ entity.noOrden }}</td>
                <td>{{ entity.claveInterna }}</td>
                <td>{{ entity.claveExterna }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('pasto_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('pasto_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('pasto_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
