{% extends 'layout.html.twig' %}

{% block content -%}
    <div class="col-lg-12">
        <h1>Editar Técnico</h1>
        <div class="panel panel-default">
            <div class="panel-heading"> </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        {{ form_start(edit_form, {'attr':{ 'class':'form-horizontal' }}) }}
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(edit_form.name,'Nombre y Apellidos') }}
                                {{ form_widget(edit_form.name,{'attr':{ 'class':'form-control','placeholder':'Nombre' }}) }}
                                {{ form_errors(edit_form.name) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(edit_form.username,'Nombre de usuario') }}
                                {{ form_widget(edit_form.username,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(edit_form.username) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(edit_form.password,'Contraseña') }}
                                {{ form_widget(edit_form.password,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(edit_form.password) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(edit_form.email,'Correo electrónico') }}
                                {{ form_widget(edit_form.email,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(edit_form.email) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(edit_form.isActive,'Activo') }}
                                {{ form_widget(edit_form.isActive,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(edit_form.isActive) }}
                            </div>
                        </div>
                        <input type="submit" class="btn btn-success" value="Guardar">
                        <a href="{{ path('tecnicolaboratorio') }}" class="btn btn-default">Lista de técnicos</a>
                        {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

