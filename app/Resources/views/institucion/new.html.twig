{% extends 'layout.html.twig' %}

{% block content -%}
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading"> <h3>Nueva Intitución</h3></div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-9">
                        {{ form_start(form, {'attr':{ 'class':'form-horizontal' }}) }}
                        <div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(form.nombre) }}
                                {{ form_widget(form.nombre,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.nombre) }}
                            </div>
                        </div><div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(form.pais) }}
                                {{ form_widget(form.pais,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.pais) }}
                            </div>
                        </div><div class="form-group">
                            <div class="col-md-7">
                                {{ form_label(form.direccion, 'Dirección') }}
                                {{ form_widget(form.direccion,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.direccion) }}
                            </div>
                        </div>
                        <input type="submit" class="btn btn-success" value="Guardar">
                        <a href="{{ path('institucion') }}" class="btn btn-default">Lista de instituciones</a>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
