{% extends 'base.html.twig' %}

{% block stylesheets %}
    <!-- Bootstrap Core CSS -->
    <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet">

    <!-- Bootstrap Theme -->
    <link href="{{ asset('css/bootstrap-theme.css') }}" rel="stylesheet" type="text/css">

    <!-- Customized Theme -->
    <link href="{{ asset('css/style.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

    {% block body %}
        <div class="container body-content">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Cambie su contraseña</h3>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form, {'attr':{ 'class':'form-horizontal' }}) }}
                        {% if errors %}
                            {% for error in errors %}
                                <span class="label label-danger">{{ error.message }}</span>
                        {% endfor %}
                        {% endif %}
                        <div class="form-group">
                            <div class="col-md-12">
                                {{ form_label(form.passwordAnterior) }}
                                {{ form_widget(form.passwordAnterior,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.passwordAnterior) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                {{ form_row(form.password.first,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_row(form.password.second,{'attr':{ 'class':'form-control' }}) }}
                            </div>
                        </div>

                        <input type="submit" class="btn btn-success" value="Cambiar">
                        <a href="{{ path('homepage') }}" class="btn btn-default">Página Principal</a>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
{% block javascripts %}
    <!-- jQuery -->
    <script src="{{ asset('js/jquery-1.10.2.js') }}"></script>

    <!-- jQuery UI -->
    <script src="{{ asset('js/jquery-ui-1.11.2.js') }}"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('js/bootstrap.js') }}"></script>

    <!-- Modernizr -->
    <script src="{{ asset('js/modernizr-2.6.2.js') }}"></script>
{% endblock %}
