{% extends 'base.html.twig' %}

{% block stylesheets %}
    <!-- Bootstrap Core CSS -->
    <link href="{{ asset('bower_components/bootstrap/dist/css/bootstrap.css') }}" rel="stylesheet">
{% endblock %}

    {% block body %}
        <div class="container body-content">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Registrese</h3>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form, {'attr':{ 'class':'form-horizontal' }}) }}
                        <div class="form-group">
                            <div class="col-md-12">
                                {{ form_label(form.nombre) }}
                                {{ form_widget(form.nombre,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.nombre) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                {{ form_label(form.username) }}
                                {{ form_widget(form.username,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.username) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                {{ form_label(form.email) }}
                                {{ form_widget(form.email,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.email) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                {{ form_label(form.institucion) }}
                                <div class="input-group">
                                    {{ form_widget(form.institucion,{'attr':{ 'class':'form-control' }}) }}
                                    {{ form_errors(form.institucion) }}
                                    <span class="input-group-addon"><a href="{{ path('nuevainstitucion') }}"><i class="glyphicon glyphicon-plus"></i></a></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                {{ form_row(form.password.first,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_row(form.password.second,{'attr':{ 'class':'form-control' }}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                {{ form_label(form.captcha,'Inserte el patrón') }}
                                {{ form_widget(form.captcha,{'attr':{ 'class':'form-control' }}) }}
                                {{ form_errors(form.captcha) }}
                            </div>
                        </div>

                        <input type="submit" class="btn btn-success" value="Registrarse">
                        <a href="{{ path('homepage') }}" class="btn btn-default">Página Principal</a>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
{% block javascripts %}
    <!-- jQuery -->
    <!-- jQuery -->
    <script src="{{ asset('bower_components/jquery/dist/jquery.min.js')}}"></script>
    <script src="{{ asset('js/jquery-ui-1.11.2.js')}}"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{ asset('bower_components/bootstrap/dist/js/bootstrap.min.js')}}"></script>


    <script>
        $(document).ready(function(){
            $('.captcha_reload').text('');
            $('.captcha_reload').addClass('glyphicon glyphicon-refresh');
        });
    </script>
{% endblock %}
